{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es5",
        "declaration": true,
        "outDir": "dist",
        "strict": true,
        "sourceMap": true,
        "watch": false,
        "sourceRoot": "src",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "types": [
            "node",
            "jest"
        ],
        "typeRoots": [
            "node_modules/@types"
        ]
    },
    "exclude": [
        "node_modules",
        "dist"
    ]
}
