{
  "name": "nocat",
  "version": "0.7.0",
  "description": "software architecture framework for no communication & assembling trouble",
  "repository": {},
  "license": "UNLICENSED",
  "private": false,
  "main": "core.js",
  "bin": {
    "nocat": "tools/nocat.js"
  },
  "types": "**/*.ts",
  "keywords": [
    "nanoservices",
    "framework",
    "typescript"
  ],
  "author": "twnzl",
  "scripts": {
    "lint": "tslint \"'src/**/*.ts\" -p tsconfig.json -c tslint.json -e node_modules",
    "clean": "rm -r dist",
    "build": "tsc && cp -R src/tools/templates dist/tools",
    "cleanbuild": "npm run clean && tsc",
    "test": "node $NODE_DEBUG_OPTION node_modules/jasmine/bin/jasmine dist/**/*.spec.js",
    "prepare": "",
    "publishlist": "npm pack && tar -xvzf *.tgz && rm -rf package *.tgz",
    "bundle": "cp package.json dist && npm publish ./dist",
    "bundle-es6": "rm -r dist && tsc --build tsconfig-es6.json && cp package-es6.json dist/package.json && npm publish ./dist"
  },
  "files": [
    "core.js",
    "core.d.ts",
    "channels/*.js",
    "channels/*.ts",
    "interfaces/*.js",
    "interfaces/*.ts",
    "managers/*.js",
    "managers/*.ts",
    "tools/*.js",
    "tools/*.ts",
    "tools/templates/*"
  ],
  "dependencies": {
    "recursive-readdir": "^2.2.2",
    "request": "^2.88.0",
    "request-promise": "^4.2.5",
    "rxjs": "^6.6.3",
    "shelljs": "^0.8.3"
  },
  "devDependencies": {
    "@types/express": "^4.17.1",
    "@types/jasmine": "^3.5.9",
    "@types/node": "10.14.7",
    "@types/recursive-readdir": "^2.2.0",
    "@types/request-promise": "^4.1.45",
    "@types/shelljs": "^0.8.5",
    "@types/typescript": "^2.0.0",
    "jasmine": "^3.5.0",
    "jasmine-spec-reporter": "^4.2.1",
    "ts-node": "^8.3.0",
    "tslint": "^5.18.0",
    "typescript": "^3.7.3"
  }
}
