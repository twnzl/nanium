{
  "name": "nanium",
  "version": "0.12.5",
  "description": "nanoservice based fullstack software architecture framework",
  "author": "twnzl",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/twnzl/nanium.git"
  },
  "bugs": {
    "url": "https://github.com/twnzl/nanium/issues"
  },
  "homepage": "https://github.com/twnzl/nanium.git#readme",
  "main": "core.js",
  "bin": {
    "nanium": "tools/nanium.js"
  },
  "types": "**/*.ts",
  "keywords": [
    "nanium",
    "framework",
    "typescript",
    "webdevelopment",
    "api",
    "rest",
    "nanoservices"
  ],
  "scripts": {
    "lint": "tslint \"'_src/**/*.ts\" -p tsconfig.json -c tslint.json -e node_modules",
    "build": "tsc && node tools/nanium.js ccp _src/tools/templates tools/templates",
    "test": "jest",
    "prepare": "",
    "publishlist": "npm pack && tar -xvzf *.tgz && ts-node _src/tools/nanium.ts rm nanium-*.tgz",
    "bundle": "npm run build && npm publish"
  },
  "files": [
    "README.md",
    "core.js",
    "core.d.ts",
    "helper.js",
    "helper.d.ts",
    "interfaces/**/*.js",
    "interfaces/**/*.ts",
    "serializers/**/*.js",
    "serializers/**/*.ts",
    "managers/**/*.js",
    "managers/**/*.ts",
    "queues/**/*.js",
    "queues/**/*.ts",
    "tools/**/*.js",
    "tools/**/*.ts",
    "tools/**/*.template"
  ],
  "dependencies": {
    "recursive-readdir": "^2.2.2",
    "rxjs": "^6.6.7",
    "shelljs": "^0.8.5"
  },
  "devDependencies": {
    "@alex_neo/jest-expect-message": "^1.0.5",
    "@types/jest": "^27.0.1",
    "@types/jest-expect-message": "^1.0.3",
    "@types/node": "14.17.17",
    "@types/recursive-readdir": "^2.2.0",
    "@types/shelljs": "^0.8.5",
    "@types/typescript": "^2.0.0",
    "jest": "^27.2.0",
    "ts-jest": "^27.0.5",
    "ts-node": "^8.3.0",
    "tslint": "^5.18.0",
    "typescript": "^4.4.3"
  }
}
