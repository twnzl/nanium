{
  "name": "nanium",
  "version": "0.10.3",
  "description": "nanoservice based fullstack software architecture framework",
  "author": "twnzl",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/twnzl/nanium.git"
  },
  "bugs": {
    "url": "https://github.com/twnzl/nanium/issues"
  },
  "homepage": "https://github.com/twnzl/nanium.git#readme",
  "main": "core.js",
  "bin": {
    "nanium": "tools/nanium.js"
  },
  "types": "**/*.ts",
  "keywords": [
    "nanium",
    "framework",
    "typescript",
    "API",
    "rest",
    "nanoservices"
  ],
  "scripts": {
    "lint": "tslint \"'src/**/*.ts\" -p tsconfig.json -c tslint.json -e node_modules",
    "clean": "ts-node src/tools/nanium.ts rm dist",
    "build": "tsc && ts-node src/tools/nanium.ts cp src/tools/templates dist/tools/templates",
    "cleanbuild": "npm run clean && npm run build",
    "test": "jest",
    "prepare": "",
    "publishlist": "cp package.json dist && npm pack ./dist && tar -xvzf *.tgz && ts-node src/tools/nanium.ts rm package *.tgz",
    "bundle": "npm run cleanbuild && cp package.json dist && cp README.md dist && npm publish ./dist",
    "bundle-es": "npm run cleanbuild && tsc --build tsconfig-es.json && cp package-es.json dist/package.json && npm publish ./dist"
  },
  "files": [
    "README.md",
    "core.js",
    "core.d.ts",
    "helper.js",
    "helper.d.ts",
    "interfaces/**/*.js",
    "interfaces/**/*.ts",
    "serializers/**/*.js",
    "serializers/**/*.ts",
    "managers/**/*.js",
    "managers/**/*.ts",
    "queues/**/*.js",
    "queues/**/*.ts",
    "tools/**/*.js",
    "tools/**/*.ts",
    "tools/**/*.template"
  ],
  "dependencies": {
    "recursive-readdir": "^2.2.2",
    "rxjs": "^6.6.3",
    "shelljs": "^0.8.3"
  },
  "devDependencies": {
    "@alex_neo/jest-expect-message": "^1.0.5",
    "@types/jest": "^27.0.1",
    "@types/jest-expect-message": "^1.0.3",
    "@types/node": "14.17.17",
    "@types/recursive-readdir": "^2.2.0",
    "@types/shelljs": "^0.8.5",
    "@types/typescript": "^2.0.0",
    "jest": "^27.2.0",
    "ts-jest": "^27.0.5",
    "ts-node": "^8.3.0",
    "tslint": "^5.18.0",
    "typescript": "^4.4.3"
  }
}
